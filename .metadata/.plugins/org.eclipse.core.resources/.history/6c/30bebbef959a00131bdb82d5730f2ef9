import java.awt.*;
import javax.swing.*;
import javax.swing.border.*;
import java.awt.event.*;
import javax.swing.Timer;



class main{
	@SuppressWarnings("deprecation")
    public static void main(String[] args) {
    	
    	JFrame board = new JFrame("Minesweeper");
    	JPanel display = new JPanel(); 
    	
    	board.getContentPane().setLayout(new BorderLayout());
    	display.setLayout(new FlowLayout());
    	
    	JLabel msgLabel = new JLabel(); 
    	
    	board.getContentPane().add(msgLabel, "Center");  
    	
    	JMenuBar topMenu = new JMenuBar();
    	
    	JMenu gameMenu = new JMenu("Game");
    	
    	topMenu.add(gameMenu);
    	
    	JMenu abtMenu = new JMenu("About");
    	
    	topMenu.add(abtMenu);
    	
    	
    	board.setJMenuBar(topMenu);
    	
    	JMenuItem gReset = new JMenuItem("Reset");
    	gameMenu.add(gReset);
    	
    	JMenuItem gTTen = new JMenuItem("Top Ten");
    	gameMenu.add(gTTen);
    	
    	JMenuItem gExit = new JMenuItem("Exit");
    	gameMenu.add(gExit);
    	
    	JMenuItem aAbout = new JMenuItem("About",KeyEvent.VK_A);
    	abtMenu.add(aAbout);
    	
    	JMenuItem aHelp = new JMenuItem("Help");
    	abtMenu.add(aHelp);
    	
    	
    	aAbout.setAccelerator(KeyStroke.getKeyStroke(
    	        KeyEvent.VK_A, ActionEvent.ALT_MASK));
    	
    	KeyStroke r;
    	
    	
    	r=aAbout.getAccelerator();
    	
    	
    	
    	
    	
    	
    	
    	
            	
    	
    	
    	
    	
    	
    	
    	
    	
    	
    	
    	
    	
    	
    	
    	
    	board.pack();  
    	board.setVisible(true);
    	
        board.show();
    	

    	
    	
    }
}