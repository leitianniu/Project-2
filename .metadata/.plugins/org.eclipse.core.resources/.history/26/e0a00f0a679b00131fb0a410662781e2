import java.awt.*;
import javax.swing.*;
import javax.swing.border.*;
import java.awt.event.*;
import javax.swing.Timer;


@SuppressWarnings("serial")
public class button extends JButton{
	
	int xCoord=-1;
	public void setX(int x){
		xCoord=x;
	}
	
	int yCoord=-1;
	public void setY(int y){
		yCoord=y;
	}
	
	public int getX(){
		return xCoord;
	}
	
	public int getY(){
		return yCoord;
	}
	
	int pos=-1;
	public int setPos(int z){
		pos=z;
	}
	
	public int getPos(){
		return pos;
	}
	
	boolean isBomb;
	public void setBomb(boolean bomb){
		if(bomb==true){
			isBomb=true;
		}
		else{
			isBomb=false;
		}
		}
	
	public boolean getBomb(){
		return isBomb;
	}
	}
	
	
	
	
}